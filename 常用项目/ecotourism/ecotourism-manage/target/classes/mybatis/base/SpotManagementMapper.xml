<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ecotourism.manage.base.dao.SpotManagementDao">

	<select id="get" resultType="com.ecotourism.manage.base.domain.SpotManagementDO">
