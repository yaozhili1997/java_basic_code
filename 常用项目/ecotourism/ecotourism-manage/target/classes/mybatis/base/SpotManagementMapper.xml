		  		  <if test="closeDate != null and closeDate != ''"> and close_date = #{closeDate} </if>
		  		</where>
	</select>

	<select id="countAll" resultType="int">
		select count(*) from base_spot_management WHERE area_no = #{areaNo}
	</select>
	 
	<insert id="save" parameterType="com.ecotourism.manage.base.domain.SpotManagementDO" useGeneratedKeys="true" keyProperty="spotId">
		insert into base_spot_management
		(
			`spot_no`, 
			`spot_name`, 
			`spot_introduct`, 
			`spot_phone`, 
			`area_no`, 
			`available`, 
			`create_user`, 
			`create_time`, 
			`update_user`, 
			`update_time`, 
			`opening_hours`, 
			`closing_hours`, 
			`stop_selling_tickets_time`, 
			`stop_checking_time`, 
			`whether_close`, 
			`close_date`
		)
		values
		(
			#{spotNo}, 
			#{spotName}, 
			#{spotIntroduct}, 
			#{spotPhone}, 
			#{areaNo}, 
			#{available}, 
			#{createUser}, 
			#{createTime}, 
			#{updateUser}, 
			#{updateTime}, 
			#{openingHours}, 
			#{closingHours}, 
			#{stopSellingTicketsTime}, 
			#{stopCheckingTime}, 
			#{whetherClose}, 
			#{closeDate}
		)
	</insert>
	 
	<update id="update" parameterType="com.ecotourism.manage.base.domain.SpotManagementDO">
		update base_spot_management 
		<set>
			<if test="spotNo != null">`spot_no` = #{spotNo}, </if>
			<if test="spotName != null">`spot_name` = #{spotName}, </if>
			<if test="spotIntroduct != null">`spot_introduct` = #{spotIntroduct}, </if>
			<if test="spotPhone != null">`spot_phone` = #{spotPhone}, </if>
			<if test="areaNo != null">`area_no` = #{areaNo}, </if>
			<if test="available != null">`available` = #{available}, </if>
