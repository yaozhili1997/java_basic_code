		where spot_id = #{spotId}
	</update>
	
	<delete id="remove">
		delete from base_spot_management where spot_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from base_spot_management where spot_id in 
		<foreach item="spotId" collection="array" open="(" separator="," close=")">
			#{spotId}
		</foreach>
	</delete>

